<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/fg_home_rv_card"
        android:layout_width="200dp"
        android:layout_height="170dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:cardElevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@color/colorWhite"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fg_home_rv_img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:foreground="@drawable/scrim"/>

            <TextView
                android:id="@+id/fg_home_rv_txt_name"
                android:textColor="#262626"
                android:layout_alignBottom="@id/fg_home_rv_img"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Brochure"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@color/bg_white"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fg_home_rv_txt_date"
                android:layout_below="@id/fg_home_rv_img"
                android:textSize="13sp"
                android:textColor="@color/txt_black"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="3dp"
                android:maxLines="1"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="February 28th to March 2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>