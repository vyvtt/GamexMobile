<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/fg_home_rv_card"
        android:layout_width="200dp"
        android:layout_height="240dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fg_home_rv_img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="140dp" />

            <TextView
                android:id="@+id/fg_home_rv_txt_name"
                android:textColor="#262626"
                android:layout_alignBottom="@id/fg_home_rv_img"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Brochure"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@color/bg_white"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fg_home_rv_txt_date"
                android:layout_below="@id/fg_home_rv_img"
                android:textSize="13sp"
                android:textColor="@color/txt_black"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="February 28th to March 2nd"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fg_home_rv_txt_addr"
                android:layout_below="@id/fg_home_rv_txt_date"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="799 Nguyen Van Linh, Tan Phu Ward, Dist 7. HoChiMinh City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>