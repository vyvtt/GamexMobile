<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/rv_item_loading_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/view_all_load_more"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/rv_item_card"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/bg_corner_radius"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rv_item_img"
                android:scaleType="centerCrop"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/rv_item_name"
                android:textColor="#262626"
                android:layout_toRightOf="@id/rv_item_img"
                android:text="Brochure"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rv_item_date"
                android:layout_below="@id/rv_item_name"
                android:layout_toRightOf="@id/rv_item_img"
                android:textSize="14sp"
                android:textColor="@color/txt_black"
                android:padding="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="February 28th to March 2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rv_item_address"
                android:layout_below="@id/rv_item_date"
                android:layout_toRightOf="@id/rv_item_img"
                android:textSize="14sp"
                android:textColor="@color/txt_sub_info"
                android:padding="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Address..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>