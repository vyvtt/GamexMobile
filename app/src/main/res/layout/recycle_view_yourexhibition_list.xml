<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/fg_yourEx_rv_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/bg_corner_radius"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fg_yourEx_rv_img"
                android:scaleType="centerCrop"
                android:layout_width="130dp"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/fg_yourEx_rv_name"
                android:textColor="#262626"
                android:layout_toRightOf="@id/fg_yourEx_rv_img"
                android:text="Brochure"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fg_yourEx_rv_date"
                android:layout_below="@id/fg_yourEx_rv_name"
                android:layout_toRightOf="@id/fg_yourEx_rv_img"
                android:textSize="14sp"
                android:textColor="@color/txt_black"
                android:padding="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:text="February 28th to March 2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fg_yourEx_rv_address"
                android:layout_below="@id/fg_yourEx_rv_date"
                android:layout_toRightOf="@id/fg_yourEx_rv_img"
                android:textSize="14sp"
                android:textColor="@color/bg_grey"
                android:padding="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:maxLines="2"
                android:text="February 28th to March 2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>