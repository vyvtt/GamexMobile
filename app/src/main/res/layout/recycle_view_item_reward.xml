<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/item_reward_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_corner_radius"
        android:padding="15dp"
        android:layout_weight="0.8"
        >

        <TextView
            android:id="@+id/item_reward_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Description"
            android:textColor="@color/txt_black"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_reward_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="24/03/2019 - xxx"
            android:textColor="@color/txt_sub_info" />

        <TextView
            android:id="@+id/item_reward_point_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="100"
            android:textColor="@color/txt_black" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_reward_click_exchange"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/color_gradient_light"
        android:layout_toEndOf="@id/item_reward_item"
        android:layout_weight="0.2"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/fg_reward_icon"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/ic_gift"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exchange"
            android:textColor="@color/txt_white"
            android:textSize="10dp"
            android:layout_below="@id/fg_reward_icon"
            android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>