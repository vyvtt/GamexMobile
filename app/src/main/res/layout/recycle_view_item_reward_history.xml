<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_corner_radius"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/item_reward_history_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="Description"
        android:textColor="@color/txt_black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_reward_history_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="24/03/2019 - xxx"
        android:textColor="@color/txt_sub_info" />

    <TextView
        android:id="@+id/item_reward_history_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:text="100"
        android:textColor="@color/color_primary_dark" />
</LinearLayout>
