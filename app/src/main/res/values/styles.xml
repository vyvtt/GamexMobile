<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary_light</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="MyTheme.SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--Style full screen-->
    <style name="MyTheme.CusFullScreenStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MyTabLayoutStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTheme.Button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/color_primary</item>
    </style>

    <!--<style name="MyTheme.EditText" parent="Widget.AppCompat.EditText">-->
        <!--<item name="android:colorControlActivated">@color/color_primary</item>-->
        <!--<item name="colorControlHighlight">@color/color_primary</item>-->
        <!--<item name="android:colorControlNormal">@color/txt_not_focus</item>-->
        <!--<item name="android:colorBackground">@color/bg_white</item>-->
        <!--<item name="android:textColor">@color/txt_black</item>-->
        <!--<item name="android:textColorHint">@color/txt_hint</item>-->
    <!--</style>-->

    <!---->
    <style name="MyStyle.InputLayout" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="MyTheme.EditText" parent="Theme.AppCompat.Light">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">@color/txt_hint_color_inactive</item>
        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlActivated">@color/txt_hint_color_active</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <!-- Error text color-->
        <item name="android:textColor">@color/txt_error_color</item>
    </style>
    <!---->

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <!--Hamburger icon color-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="MyTheme.TextLabel" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/color_primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
