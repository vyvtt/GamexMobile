<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <!--Style full screen-->
    <style name="CusFullScreenStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/color_accent</item>
        <item name="colorButtonNormal">@color/color_primary</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlActivated">@color/color_primary</item>
        <item name="android:colorControlNormal">@color/txt_not_focus</item>
        <item name="android:colorBackground">@color/bg_white</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textColorHint">@color/txt_hint</item>
    </style>

    <style name="MyTextLabel" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/color_primary</item>
    </style>

</resources>
